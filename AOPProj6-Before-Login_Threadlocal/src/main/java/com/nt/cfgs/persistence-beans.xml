<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<!-- config hikari data source -->
<bean id="hkCP" class="com.zaxxer.hikari.HikariDataSource">
<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
<property name="jdbcUrl" value="jdbc:oracle:thin:@localhost:1521:orcl"/>
<property name="username"  value="scott"/>
<property name="password" value="shailja1234"/></bean>

<!-- congig jdbc templet -->
<bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">
<property name="dataSource" ref="hkCP"/>
</bean>

<!-- confic dao class -->
<bean id="bankDAO" class="com.nt.dao.BankDAOImpl">
<constructor-arg  ref="jt"/>
</bean>

<!-- config authenticatoc -->

<bean id="authenticationDAO" class="com.nt.dao.AuthenticationDAOImpl">
<constructor-arg ref="jt"/>
</bean>
</beans>
